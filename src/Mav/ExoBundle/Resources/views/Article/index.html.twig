{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Article list</h1>
    <ul>
        <li>
            <a href="{{ path('admin_article_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Content</th>
                <th>Status</th>
                <th>Cdate</th>
                <th>Udate</th>
                <th>Excerpt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('admin_article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.status }}</td>
                <td>{% if entity.cdate %}{{ entity.cdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.udate %}{{ entity.udate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.excerpt }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_article_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_article_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

        <ul>
            <li>
                <a href="{{ path('admin_article_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
    {% endblock %}
